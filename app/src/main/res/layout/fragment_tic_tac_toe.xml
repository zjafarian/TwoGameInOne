<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.TicTacToeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:layout_marginRight="70dp"
            android:src="@drawable/ic_girl" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_boy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageButton
            android:id="@+id/image_btn_user_girl_active"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:background="@android:drawable/list_selector_background"
            android:src="@android:drawable/presence_online"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/image_btn_user_boy_deactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:background="@android:drawable/menuitem_background"
            android:src="@android:drawable/presence_invisible"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_btn_user_girl_deactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59dp"
            android:background="@android:drawable/menuitem_background"
            android:src="@android:drawable/presence_invisible"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/image_btn_user_boy_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:background="@android:drawable/list_selector_background"
            android:src="@android:drawable/presence_online"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1_1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_1_2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_1_3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_2_1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_2_2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_2_3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_3_1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_3_2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/btn_3_3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                app:backgroundTint="@color/colorAccent"
                app:iconGravity="textStart"
                app:iconSize="45dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@android:drawable/list_selector_background"
        android:src="@drawable/ic_setting" />

</FrameLayout>